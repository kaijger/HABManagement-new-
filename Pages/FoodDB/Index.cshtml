@page
@using Microsoft.AspNetCore.Http
@model HABManagement.Pages.FoodDB.IndexModel

@{
    ViewData["Title"] = "冷蔵庫";
}

<body style="background:#AFEEEE;">
</body>

<h1>冷蔵庫管理</h1>

<p>
    <a class="btn text-white" style="background-color:#fafafa" asp-page="Create">
        <font face="ＭＳ Ｐゴシック,ＭＳ ゴシック" color="#4169e1">新規作成</font>
    </a>
</p>
<form>
    <p>
        名前: <input type="text" asp-for="SearchString" />
        <input type="submit" value="検索"  />
        <a class="btn text-white" style="background-color:#fafafa" asp-page="./Index">
            <font face="ＭＳ Ｐゴシック,ＭＳ ゴシック" color="#4169e1">リセット</font>
        </a>
    </p>
</form>


<div style="background:#d5eded;">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model)名前
            </th>
            <th>
                 <a class="btn text-dark" style="background-color:whitesmoke" asp-page="./Index" asp-route-sortOrder="NumAsc" asp-route-SearchString="@Model.SearchString">
                    ▲
                 </a>
                @Html.DisplayNameFor(model => model)個数
                    <a class="btn text-dark" style="background-color:whitesmoke" asp-page="./Index" asp-route-sortOrder="NumDesc" asp-route-SearchString="@Model.SearchString">
                    ▼
                </a>
            </th>
            <th>
                <a class="btn text-dark" style="background-color:whitesmoke" asp-page="./Index" asp-route-sortOrder="DateAsc" asp-route-SearchString="@Model.SearchString">
                    ▲
                </a>
                @Html.DisplayNameFor(model => model)日付
                    <a class="btn text-dark" style="background-color:whitesmoke" asp-page="./Index" asp-route-sortOrder="DateDesc"asp-route-SearchString="@Model.SearchString">
                    ▼
                </a>
            </th>
            <th>
                <a class="btn text-dark" style="background-color:whitesmoke" asp-page="./Index" asp-route-sortOrder="ExpiryDateAsc" asp-route-SearchString="@Model.SearchString">
                        ▲
                </a>
                @Html.DisplayNameFor(model => model)有効期限
                    <a class="btn text-dark" style="background-color:whitesmoke" asp-page="./Index" asp-route-sortOrder="ExpiryDateDesc" asp-route-SearchString="@Model.SearchString">
                    ▼
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model)メモ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Food) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num)
            </td>
            <td>
                @Html.DisplayFor(modelItem =>item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo)
            </td>
            <td>
                        <a class="btn text-white" style="background-color:#fafafa" asp-page="./Edit" asp-route-id="@item.ID">
                            <font face="ＭＳ Ｐゴシック,ＭＳ ゴシック" color="#4169e1">編集</font>
                        </a>
                        <a class="btn text-white" style="background-color:#fafafa" asp-page="./Details" asp-route-id="@item.ID">
                            <font face="ＭＳ Ｐゴシック,ＭＳ ゴシック" color="#4169e1">詳細</font>
                        </a>
                        <a class="btn text-white" style="background-color:#fafafa" asp-page="./Delete" asp-route-id="@item.ID">
                            <font face="ＭＳ Ｐゴシック,ＭＳ ゴシック" color="#4169e1">削除</font>
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>