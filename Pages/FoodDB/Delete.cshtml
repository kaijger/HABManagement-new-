@page
@model HABManagement.Pages.FoodDB.DeleteModel

@{
    ViewData["Title"] = "削除";
}

<body style="background:#AFEEEE;">
</body>

<h1>削除</h1>

<h3>本当に削除しますか？</h3>
<div>
    <h4>冷蔵庫</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)名前
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)個数
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Num)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)日付
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)有効期限
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.ExpiryDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)メモ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Memo)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Food.ID" />
        <input type="submit" value="削除" class="btn btn-danger" /> |
        <a asp-page="./Index">冷蔵庫管理に戻る</a>
    </form>
</div>
