@page
@model HABManagement.Pages.SListDB.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>削除</h1>

<h3>本当に削除しますか？</h3>
<div>
    <h4>買物リスト</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            名前
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SList.Name)
        </dd>
        <dt class="col-sm-2">
            メモ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SList.Memo)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SList.ID" />
        <input type="submit" value="削除" class="btn btn-danger" /> |
        <a asp-page="./Index">買い物リストに戻る</a>
    </form>
</div>
