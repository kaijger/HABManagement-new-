@page
@model HABManagement.Pages.SListDB.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>編集</h1>

<h4>買い物リスト</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SList.ID" />
            <div class="form-group">
                <label asp-for="SList.Name" class="control-label">名前</label>
                <input asp-for="SList.Name" class="form-control" />
                <span asp-validation-for="SList.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SList.Memo" class="control-label">メモ</label>
                <input asp-for="SList.Memo" class="form-control" />
                <span asp-validation-for="SList.Memo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">買物リストに戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
